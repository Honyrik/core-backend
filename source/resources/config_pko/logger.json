{
    "handlers": {
        "errors": {
            "class": "rufus/handlers/file",
            "file": "./logs/error.log",
            "level": "ERROR"
        },
        "main": {
            "class": "rufus/handlers/rotating",
            "file": "c:/logs/main.log",
            "maxSize": "30mb",
            "maxFile": "30"
        },
        "console": {
            "class": "rufus/handlers/console"
        }
    },
    "loggers": {
        "root": {
            "level": "TRACE",
            "handlers": ["main", "console"]
        }
    }
}
